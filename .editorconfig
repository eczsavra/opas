indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Log files (no formatting)
[*.log]
indent_style = unset
indent_size = unset
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

# Binary files (no formatting)
[*.{exe,dll,so,dylib,pdb,obj,bin,dat}]
indent_style = unset
indent_size = unset
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

# Image files (no formatting)
[*.{png,jpg,jpeg,gif,bmp,ico,svg}]
indent_style = unset
indent_size = unset
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

# Archive files (no formatting)
[*.{zip,tar,gz,rar,7z}]
indent_style = unset
indent_size = unset
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
